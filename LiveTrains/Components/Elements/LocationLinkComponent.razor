@using LiveTrains.Models
@using LiveTrains.Models.LADB

@if(CurrentStationCode == Location.LocationCode)
{
    <span>@Location.LocationName</span>
} else
{
    <a href="/station/@Location.LocationCode">@Location.LocationName</a>
}

@code {
    [Parameter]
    [EditorRequired]
    public string CurrentStationCode { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public TrainServiceLocation Location { get; set; } = null!;
}
